generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Info {
  id        Int       @id @default(autoincrement())
  title     String
  icon      String
  category  String
  moneyUnit String
  response  Response?
}

model Response {
  id     Int    @id @default(autoincrement())
  infoId Int    @unique
  info   Info   @relation(fields: [infoId], references: [id])
  steps  Step[]
}

model Step {
  id          Int          @id @default(autoincrement())
  title       String
  icon        String
  details     String
  moneyCost   Float
  timeCost    Float
  responseId  Int
  completions Completion[]
  response    Response     @relation(fields: [responseId], references: [id])
}

model Completion {
  id     Int     @id @default(autoincrement())
  value  Boolean
  stepId Int
  step   Step    @relation(fields: [stepId], references: [id])
}
